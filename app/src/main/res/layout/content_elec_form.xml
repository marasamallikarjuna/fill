<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <com.mi.fillspay.utilities.GradientTextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:paddingEnd="@dimen/_2sdp"
        android:text="Pay Your Bill"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:fontFamily="@font/amarante" />

    <TextView
        android:id="@+id/board_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:padding="@dimen/_3sdp"
        android:text=" Board"
        android:textColor="@color/greyTextcolor"
        app:fontFamily="@font/amarante" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/autoComBillers_ids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_plug_icon"
        android:drawablePadding="@dimen/_4sdp"
        android:focusable="false"
        android:inputType="text|textNoSuggestions"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13ssp"
        app:backgroundTint="@color/colorEdit"
        app:fontFamily="@font/amarante" />

    <TextView
        android:id="@+id/tv_viewsample_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:fontFamily="@font/amarante"
        android:padding="@dimen/_3sdp"
        android:text="View Sample Bill"
        android:textColor="@color/color_start" />

    <LinearLayout
        android:id="@+id/layout_cnum_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:background="@color/text_grey"
        android:layout_gravity="end"
        android:text="View Bill"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:id="@+id/view_bill"
        android:layout_height="@dimen/_16sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:padding="@dimen/_3sdp"
        android:text="Enter Amount"
        android:textColor="@color/greyTextcolor"
        app:fontFamily="@font/amarante" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_amount_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_dollar"
        android:drawablePadding="@dimen/_2sdp"
        android:inputType="number|textNoSuggestions"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_13ssp"
        app:backgroundTint="@color/colorEdit"
        app:fontFamily="@font/amarante" />

    <com.mi.fillspay.utilities.SwipeButton
        android:id="@+id/swipe_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp" />

</LinearLayout>